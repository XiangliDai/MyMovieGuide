<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xdai.mymovieguide">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.detail.MovieDetailActivity"
            android:parentActivityName=".ui.main.MainActivity">

        </activity>
        <activity android:name=".ui.movie_list.MovieListActivity">

        </activity>
        <activity android:name=".ui.movie_trailers.MovieTrailersActivity">

        </activity>
        <activity android:name=".ui.movie_trailers.MoviePlayerActivity">

        </activity>
    </application>

</manifest>